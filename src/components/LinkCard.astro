---
interface Props {
	href: string;
	thumbnail: string;
	title: string;
	description: string;
}

const { href, thumbnail, title, description } = Astro.props;
---

<a href={href} class="link-card">
	<img src={thumbnail} alt={title} class="card-image" />
	<div class="card-overlay">
        <div class="card-content">
            <h3 class="card-title">{title}</h3>
            <p class="card-description">{description}</p>
        </div>
        <div class="card-footer">
            <div>Article Page</div>
            <div class="icon-wrapper">
                <i class="fa-solid fa-arrow-right"></i>
            </div>
        </div>
	</div>
</a>

<style>
	.link-card {
		position: relative;
		display: block;
		width: 250px;
		height: 150px;
		border-radius: 15px;
		overflow: hidden;
		text-decoration: none;
	}

	.card-image {
		width: 100%;
		height: 100%;
		object-fit: cover;
		transition: transform 0.3s ease;
	}

	.card-overlay {
		position: absolute;
		inset: 0; /* top, right, bottom, left: 0 と同じ */
		background: rgba(0, 0, 0, 0.3); /* 下部を暗くして文字を見やすく */
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: flex-end; /* 通常時は下寄せ */
		opacity: 1; /* 常時表示 */
		transition: all 0.3s ease;
		color: white;
		padding: 15px;
		text-align: center;
	}

	/* ホバー時のスタイル */
	.link-card:hover .card-overlay {
		backdrop-filter: blur(5px); /* すりガラス効果 */
		background: rgba(0, 0, 0, 0.4); /* 文字が見やすいように少し暗く */
        justify-content: center; /* ホバー時は中央寄せ */
	}

    .card-title {
        font-size: 1rem;
        font-weight: bold;
        margin-bottom: 5px;
        text-shadow: 0 2px 4px rgba(0,0,0,0.5);
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }

    .card-description {
        font-size: 0.8rem;
        opacity: 0; /* 通常時は隠す */
        height: 0;
        overflow: hidden;
        transition: all 0.3s ease;
        display: -webkit-box;
        -webkit-line-clamp: 3;
        -webkit-box-orient: vertical;
    }

    .link-card:hover .card-description {
        opacity: 1;
        height: auto;
        /* margin-bottom: 15px; */
    }

    .card-footer {
        width: 100%;
        border-bottom: solid 2px white;
        opacity: 0; /* 通常時は隠す */
        transform: translateY(20px);
        transition: all 0.3s ease;
        
        display: flex;
        align-items: center;
        justify-content: flex-end;
        gap: 10px;
        
        font-size: 0.8rem;
    }
    
    .link-card:hover .card-footer {
        opacity: 1;
        transform: translateY(0);
        margin-bottom: 15px;
    }

	.icon-wrapper {
		font-size: 1rem;
        display: flex;
        align-items: center;
        justify-content: center;
        /* transform: rotate(-45deg); */
	}

</style>