---
import CategoryTag from '../components/CategoryTag.astro';

interface Props {
	href: string;
	thumbnail: string;
	title: string;
    category: string;
	slug: string;
    date?: string;
}

const { href, thumbnail, title, category, slug, date } = Astro.props;
---

<a href={href} class="link-card" data-category={category}>

    <div class="card-left-container">
        <div class="title-container">
            <div class="card-title">
                {title}
            </div>
            <div class="card-date">
                {date}
            </div>
        </div>
            <CategoryTag category={category} />
    </div>

    <div class="card-right-container">
        <i class="fa-solid fa-ellipsis-vertical"></i>
    </div>

</a>

<style>
    .link-card {
        /* サイズ、形 */
        width: clamp(400px, 90%, 700px);
        height: 100px;
        padding: 20px;
        position: relative;

        /* デザイン */
        background-color: inherit;

        /* コンテンツ */
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 10px;
        color: var(--white);
    }

    .link-card:hover {
        background-color: var(--theme4);
    }
    
    .card-left-container {
        width: 90%;
        display: flex;
        justify-content: space-between;
        align-items: center;
        gap: 10px;
    }

    .title-container {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: flex-start;
        gap: 2px;
    }

    .card-title{
        font-size: clamp(var(--small), 3vw, var(--medium));
    }

    .card-date {
        font-size: 0.9rem;
        opacity: 0.8;
    }

    .card-right-container {
        width: 3%;
        font-size: 25px;
    }

    /* ========== 疑似要素でボーダーを描画し、重なりを防ぐ ========== */
    .link-card::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 2px;
        background-color: var(--white);
    }

    .link-card:last-of-type::after {
        content: "";
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 2px;
        background-color: var(--white);
    }

    /* JSで制御するためのクラス: フィルタリング時に最後の要素に適用 */
    .link-card.last-visible::after {
        content: "";
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 2px;
        background-color: var(--white);
    }
</style>