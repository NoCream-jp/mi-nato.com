---
import { getCollection, type CollectionEntry } from 'astro:content';
import LinkCard from '../../components/LinkCard.astro';

const allArticles = await getCollection('article');
const sortedArticles = allArticles.sort((a, b) => b.slug.localeCompare(a.slug)).slice(0, 5);

// 1. 記事データのパスを生成する
export async function getStaticPaths() {
  const blogEntries = await getCollection('article');
  return blogEntries.map((entry) => ({
    params: { slug: entry.slug }, props: { entry }
  }));
}

interface Props {
  entry: CollectionEntry<'article'>;
}

// 2. 記事データを受け取り、本文をレンダリングする
const { entry } = Astro.props;
const { Content } = await entry.render();

// slugから日付情報を抽出 (形式: YYYYMMDDNN)
const year = entry.slug.substring(0, 4);
const month = entry.slug.substring(4, 6);
const day = entry.slug.substring(6, 8);
const formattedDate = `${year}年${month}月${day}日`;
---

<!DOCTYPE html>
<html lang="ja">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<title>{entry.data.title} | mi-nato.com</title>
		<link rel="stylesheet" href="/styles/index.css">
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
        <link href="https://fonts.googleapis.com/css2?family=Merriweather:wght@300;400;700;900&display=swap" rel="stylesheet">
		<link href="https://fonts.googleapis.com/css2?family=Gothic+A1&display=swap" rel="stylesheet">
	</head>
	<body>
		<header class="header">
			<div class="header-left">
                <a href="/"><i class="fa-solid fa-arrow-left"></i></a>
            </div>
            <div class="">
                Article Page
            </div>
		</header>

        <div class="article-page-container">
            <div class="article-page-left-container">
                <div class="section-title">
                    <!-- <span class="article-number">{entry.slug}</span> -->
                    Article
                </div>
                <div class="section">
                    <article class="article-content">
                        <h1 class="article-title">{entry.data.title}</h1>
                        <div class="article-meta">
                            <span class="article-date">最新編集日：{formattedDate}</span>
                        </div>
                        <img src={entry.data.thumbnail} alt={entry.data.title} class="article-thumbnail" />
                        <div class="article-body">
                            <Content />
                        </div>
                    </article>
                </div>
            </div>
            <div class="article-page-right-container">
                <div class="section">
                    記事一覧
                    <div class="card-content">
                    {sortedArticles.map((article) => (
                        <LinkCard
                            href={`/article/${article.slug}`}
                            thumbnail={article.data.thumbnail}
                            title={article.data.title}
                            description={article.data.description}
                        />
                    ))}
                    </div>
                </div>
            </div>
        </div>
	</body>
</html>

<style>
    /* 記事ページ固有のスタイル */

    .header .fa-arrow-left {
        font-size: 24px;
    }

    /* .article-body h1 {
        
    } */

    .article-page-container {
        display: flex;
        justify-content: center;
        align-items: flex-start;
        gap: auto;
        max-width: 1500px;
        margin: 0 auto;
    }

    .section { /* 記事ページ限定のスタイル */
        display: block;
    }

    .article-content {
        background-color: rgba(255, 255, 255, 0.9);
        padding: 40px;
        border-radius: 20px;
        max-width: 800px;
        margin: 0 auto;
        color: #333;
    }
    .article-title {
        font-size: 2rem;
        margin-bottom: 20px;
        color: #333;
    }
    .article-meta {
        display: flex;
        gap: 20px;
        color: #666;
        font-size: 0.9rem;
        margin-bottom: 20px;
    }
    .article-thumbnail {
        width: 100%;
        height: auto;
        max-height: 400px;
        object-fit: cover;
        border-radius: 10px;
        margin-bottom: 30px;
    }
    .article-body {
        line-height: 1.8;
        font-size: 1.1rem; /* ここで文字の大きさを調整します */
    }

    @media (max-width: 510px) { /* モバイルの時文字を小さくする */
        .article-body {
            font-size: 0.8rem;
        }
    }


    .article-page-left-container {
        flex: 1;
        /* min-width: ; */
    }
    .article-page-right-container {
        /* width: 340px; */
        width: fit-content;
        flex-shrink: 0;
    }
    .article-page-right-container .section-title {
        max-width: 70%;
    }
    .article-page-right-container .section {
        border-radius: 20px;
        width: fit-content;
        margin-top: 80px;

        display: flex;
        flex-direction: column;
        align-items: center;

        color: #fff;
        font-family: "Zalando Sans", sans-serif;
        font-weight: 600;
        font-size: clamp(15px, 4vw, 25px);
    }
    .article-page-right-container .card-content {
        width: fit-content;
        background-color: #fff;
        padding: 10px;
        border-radius: 20px;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 20px;
    }

    @media (max-width: 900px) {
        .article-page-container {
            flex-direction: column;
        }
        .article-page-right-container .section {
            margin-top: 0px;

            flex-direction: row;
            flex-wrap: wrap;
            justify-content: center;
        }
    }
</style>